@model IEnumerable<Sgu.StudentTesting.PL.ViewModel.Question.QuestionDisplayVM>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Testlist</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdSubject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTheme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VariantOfAnswer1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VariantOfAnswer2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VariantOfAnswer3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VariantOfAnswer4)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTheme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VariantOfAnswer1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VariantOfAnswer2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VariantOfAnswer3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VariantOfAnswer4)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
