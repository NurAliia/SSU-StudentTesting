@model Sgu.StudentTesting.PL.ViewModels.User.UserDisplayVM
@User.Identity.IsAuthenticated
@if (User.Identity.IsAuthenticated && Model.Name !=null)
{
    //"LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(Model.Name, "Details", new { id = Model.Id})
            </li>
            <li>@Html.ActionLink("Выход", "Logoff", "Account")</li>            
        </ul>
    }
    
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
